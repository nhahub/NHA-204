@model List<MAlex.Models.ContactMessage>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Messages</title>
    <link href="~/CSS/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --navy-blue: #0b3c65;
            --orange: #f58220;
            --white: #ffffff;
            --light-gray: #f5f5f5;
            --light-blue: #4a90e2;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: "Poppins", sans-serif;
            background-color: #f4f4f4;
            color: var(--navy-blue);
        }

            body::before {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url("../images/WhatsApp Image 2025-09-29 at 19.23.14_ab63f557.jpg") no-repeat center center fixed;
                background-size: cover;
                filter: blur(5px);
                z-index: -1;
            }

        header {
            background-color: rgba(11, 60, 101, 0.95);
            color: var(--white);
            padding: 15px 50px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            header h1 {
                margin: 0;
                font-size: 24px;
            }

        nav a {
            color: var(--white);
            margin: 0 15px;
            text-decoration: none;
            font-weight: 500;
        }

            nav a:hover {
                color: var(--orange);
                border-bottom: 2px solid var(--orange);
            }

        .contact-section {
            background-color: rgba(255, 255, 255, 0.9);
            margin: 50px auto;
            width: 80%;
            max-width: 900px;
            border-radius: 16px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            padding: 40px;
        }

        h2 {
            color: var(--navy-blue);
            border-left: 5px solid var(--orange);
            padding-left: 10px;
        }

        .contact-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 30px;
        }

        .contact-form {
            flex: 1;
            min-width: 280px;
        }

            .contact-form input,
            .contact-form textarea {
                width: 100%;
                padding: 10px;
                margin: 8px 0;
                border: 1px solid #ccc;
                border-radius: 8px;
                font-size: 14px;
                font-family: inherit;
            }

            .contact-form textarea {
                height: 120px;
                resize: none;
            }

            .contact-form button {
                background-color: var(--orange);
                color: var(--white);
                border: none;
                padding: 10px 20px;
                border-radius: 8px;
                font-size: 15px;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .contact-form button:hover {
                    background-color: var(--light-blue);
                }

        .contact-info {
            flex: 1;
            min-width: 250px;
            color: #333;
        }

            .contact-info p {
                margin: 10px 0;
            }

        .faq-section {
            margin-top: 40px;
        }

        .faq-item {
            background-color: rgba(245, 245, 245, 0.9);
            padding: 15px;
            margin-bottom: 10px;
            border-left: 4px solid var(--light-blue);
            border-radius: 10px;
        }

            .faq-item h4 {
                margin: 0;
                color: var(--navy-blue);
            }

            .faq-item p {
                margin: 5px 0 0;
                color: #444;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            table th, table td {
                padding: 10px;
                border: 1px solid #ddd;
                text-align: left;
            }

            table th {
                background-color: var(--light-gray);
            }

        .btn-outline-danger {
            border: 1px solid var(--orange);
            color: var(--orange);
            background: transparent;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }

            .btn-outline-danger:hover {
                background-color: var(--orange);
                color: var(--white);
            }

        .table-responsive {
            overflow-x: auto;
        }

        picture img {
            width: 100px;
        }
    </style>
</head>
<body>
    

    <section class="contact-section">
        <h2>Messages</h2>

        @if (Model != null && Model.Count > 0)
        {
            <div class="table-responsive">
                <table>
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Subject</th>
                            <th>Message</th>
                            <th>Date Sent</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var message in Model)
                        {
                            <tr>
                                <td>@message.FullName</td>
                                <td>@message.Email</td>
                                <td>@message.Subject</td>
                                <td>@message.Message</td>
                                <td>@message.SentAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <form asp-action="Delete" asp-controller="Contact"
                                          asp-route-id="@message.Id" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger rounded-2"
                                                onclick="return confirm('هل أنت متأكد من حذف هذه الرسالة؟');">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-center mt-4">No contact messages found.</p>
        }
    </section>

    <script src="~/JS/bootstrap.bundle.min.js"></script>
</body>
</html>
