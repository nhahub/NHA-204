<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alexandria Abu Qir Metro</title>
    <link rel="shortcut icon" href="~/images/logo.jpg" type="image/x-icon" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=PT+Sans+Caption:wght@400;700&family=Righteous&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/media.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>


        html, body {
            height: auto;
            min-height: 100vh;
            margin: 0;
            overflow-x: hidden;
        }



        .navbar-light .navbar-nav .nav-link {
            color: black;
        }

            .navbar-light .navbar-nav .nav-link:hover {
                color: #555;
            }



        main.full-page-content {
            width: 100%;
            min-height: auto;
            margin-top: 70px;
            padding: 0;
        }



        .page-container {
            width: 100%;
            padding: 20px 40px;
            box-sizing: border-box;
        }

    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @* Navbar on all pages *@
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top shadow">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Home", "Home")">
                    <img src="~/images/logo.jpg" class="rounded-circle me-2" alt="Logo" style="width:40px; height:40px;" />
                    <span class="fw-bold fs-4">Abu Qir Metro</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("UserManagement", "Admin")">Users</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("TicketsManagement", "Ticket")">Tickets</a></li>
                             <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "SubscriptionManagement")">Subscriptions</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Manage", "Stations")">Stations</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("ContactAdmin", "Contact")">Contacts</a></li>

                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Tickets", "Ticket")">Tickets</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("AvailableSubscriptions", "UserSubscriptions")">Subscriptions</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Stations")">Stations Info</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("SeeAlex", "Home")">Explore Alexandria</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Contact", "Contact")">Contact/Help</a></li>
                        }
                               @if (User.Identity?.IsAuthenticated == true)
                                      {
           
                               @if (!User.IsInRole("Admin"))
                                     {
                                       <li class="nav-item">  
                                       <a class="nav-link p-0 ps-3" href="@Url.Action("Index", "Notification")">Notifications</a>
                                        </li>
                                       }

                                      <li class="nav-item">
                                            <a class="nav-link p-0 ps-3" href="@Url.Action("Profile", "Account")">
                                            <img src="~/images/testimonial-2.jpg" class="rounded-circle" alt="profile logo" style="width:40px; height:40px;" />
                                        </a>
                                    </li>

                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                   <button type="submit" class="nav-link btn btn-link">Logout</button>
                                </form>
                            </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link" href="@Url.Action("Login", "Account")">Login</a>
                                        </li>
                                    }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="full-page-content">
        <div class="page-container">
            @RenderBody()
        </div>
    </main>

    <!-- Scripts -->
    <script src="~/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
