@model MAlex.ViewModels.PurchaseSubscriptionViewModel
@{
    ViewData["Title"] = "Purchase Subscription";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow p-4">
                <h3 class="text-center mb-4">Purchase Subscription</h3>

                <div class="summary-box mb-4">
                    <h5 class="fw-bold">@Model.SubscriptionName</h5>
                    <p class="text-muted">Start Date: @Model.StartDate.ToShortDateString()</p>
                    <h4 class="text-success">@Model.Price EGP</h4>
                </div>

                <form asp-action="Purchase" method="post" onsubmit="return confirmPurchase()">

                    @Html.AntiForgeryToken()

                    <input type="hidden" asp-for="SubscriptionID" />
                    <input type="hidden" asp-for="SubscriptionName" />
                    <input type="hidden" asp-for="Price" />

                    <div class="mb-3">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success w-100">
                        Confirm Purchase
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>
<script>
    function confirmPurchase() {
        return confirm("Are you sure you want to purchase this subscription?");
    }
</script>

