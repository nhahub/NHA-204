@model IEnumerable<MAlex.Models.Subscrubtion>
@{
    ViewData["Title"] = "Available Subscriptions";
}

<link rel="stylesheet" href="~/css/subscriptions.css" />


<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Available Subscriptions</h2>

    <a class="btn btn-primary" href="/UserSubscriptions/My">
        My Subscriptions
    </a>
</div>


<div class="container mt-5">
    <h2 class="text-center mb-4">Available Subscriptions</h2>

    <div class="row">
        @foreach (var s in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="subscription-card p-4 shadow rounded">
                    <h4 class="fw-bold">@s.Name</h4>
                    <p class="text-muted">@s.Description</p>

                    <div class="pricing my-3">
                        <span class="price">@s.Price EGP</span>
                        <span class="duration">/@s.DurationDays days</span>
                    </div>

                    <a href="@Url.Action("Purchase", "UserSubscriptions", new { id = s.SubscriptionID })"
                       class="btn btn-primary w-100 mt-2">
                        Buy Now
                    </a>
                </div>
            </div>
        }
    </div>
</div>
