@model IEnumerable<Ticket>
@{
    ViewData["Title"] = "TicketsManagement";
}





<h2>Tickets Management</h2>

<table class="table table-striped table-bordered shadow">
    <thead class="table-dark">
        <tr>
            <th>Ticket Type</th>
            <th>Start Station</th>
            <th>End Station</th>
            <th>Total price</th>
           
           
            
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Trip.Type</td>
                 <td>@ticket.Trip.StartStation.StationName</td>
                <td>@ticket.Trip.EndStation.StationName</td>
                <td>@ticket.Trip.TotalPrice</td>
               
            </tr>

        }
    </tbody>
</table>

<nav>

    <ul class="pagination">
        @if (ViewBag.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1  )" > prev    </a>
            </li>    
       
        }
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
           <li class="page-item@(i==ViewBag.CurrentPage ? "Active" : "")">

               <a class="page-link" href="?page=@i">
                 @i

               </a>
           </li> 
          
            
            
        }
        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <li class="page-item"><a class="page-link" href="?page=@(ViewBag.CurrentPage +1)">Next</a> </li>    
        }

    </ul>
</nav>
