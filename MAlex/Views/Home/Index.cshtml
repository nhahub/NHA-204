
@{
    ViewData["Title"] = "Alexandria Abu Qir Metro";
}
@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}

<header>
    <div class="slider position-relative">
        <div class="slide slide1"></div>
        <div class="slide slide2"></div>
        <div class="slide slide3"></div>
        <div class="slide slide4"></div>
        <div class="overlay"></div>
        <div>
            <div class="content">
                <h1 class="fs-2">Welcome to Alexandria Metro</h1>
                <p>Discover the city with ease</p>
            </div>
            <div class="content-date position-absolute top-50 start-50 translate-middle">
                <div class="datetime">
                    <p id="date"></p>
                    <p id="time"></p>
                </div>
                <div class="weather">
                    <p id="temperature"></p>
                    <p id="city">Alexandria</p>
                </div>
            </div>
            <div class="buttons d-flex justify-content-center align-items-center gap-3">
                <div class="btn1 rounded-4 p-2"><a href="@Url.Action("BookTicket", "Ticket")">Book your ticket</a></div>
                <div class="btn2 rounded-4 p-2"><a href="@Url.Action("Tickets", "Ticket")">View ticket prices</a></div>
            </div>
        </div>
    </div>
</header>

@section Scripts {
    <script src="~/js/main.js"></script>
}






